{
  "route_id": "test_reserve_001",
  "steps": [
    {
      "label": "予約ページを開く",
      "action": "load",
      "target": "https://hotel-example-site.takeyaqa.dev/ja/reserve.html?plan-id=0"
    },
    {
      "label": "宿泊予約ページが表示されていることを確認する",
      "action": "assertVisible",
      "target": "h2:has-text('宿泊予約')"
    },
    {
      "label": "宿泊日入力フィールドが表示されていることを確認する",
      "action": "assertVisible",
      "target": "#date"
    },
    {
      "label": "宿泊数入力フィールドが表示されていることを確認する",
      "action": "assertVisible",
      "target": "#term"
    },
    {
      "label": "宿泊日を空白のまま送信する",
      "action": "click",
      "target": "#reserve-form"
    },
    {
      "label": "エラーメッセージが表示されることを確認する",
      "action": "assertVisible",
      "target": ".invalid-feedback"
    },
    {
      "label": "宿泊日を3ヶ月以内の日付を入力する",
      "action": "fill",
      "target": "#date",
      "args": [
        "2023-11-15"
      ]
    },
    {
      "label": "宿泊数を1泊入力する",
      "action": "fill",
      "target": "#term",
      "args": [
        "1"
      ]
    },
    {
      "label": "正しい情報で予約を送信する",
      "action": "click",
      "target": "#reserve-form"
    },
    {
      "label": "確認ページに遷移することを確認する",
      "action": "assertVisible",
      "target": "h1:has-text('確認')"
    },
    {
      "label": "宿泊日が保持されていることを確認する",
      "action": "assertValue",
      "target": "#date",
      "args": [
        "2023-11-15"
      ]
    },
    {
      "label": "宿泊数が保持されていることを確認する",
      "action": "assertValue",
      "target": "#term",
      "args": [
        "1"
      ]
    },
    {
      "label": "無効な宿泊日を入力して予約を送信する",
      "action": "fill",
      "target": "#date",
      "args": [
        "2024-02-30"
      ]
    },
    {
      "label": "エラーメッセージが表示されることを確認する",
      "action": "assertVisible",
      "target": ".invalid-feedback"
    }
  ]
}