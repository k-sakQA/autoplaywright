{
  "route_id": "test_reserve_001",
  "steps": [
    {
      "label": "宿泊予約ページを開く",
      "action": "load",
      "target": "https://hotel-example-site.takeyaqa.dev/ja/reserve.html?plan-id=0"
    },
    {
      "label": "宿泊日入力欄の表示確認",
      "action": "assertVisible",
      "target": "#date"
    },
    {
      "label": "宿泊数入力欄の表示確認",
      "action": "assertVisible",
      "target": "#term"
    },
    {
      "label": "宿泊日を空白のまま送信する",
      "action": "click",
      "target": "#reserve-form"
    },
    {
      "label": "エラーメッセージの表示確認",
      "action": "assertVisible",
      "target": ".invalid-feedback"
    },
    {
      "label": "有効な宿泊日を入力する",
      "action": "fill",
      "target": "#date",
      "inputValue": "2023-09-15"
    },
    {
      "label": "有効な宿泊数を入力する",
      "action": "fill",
      "target": "#term",
      "inputValue": "3"
    },
    {
      "label": "正しく宿泊日と宿泊数を入力後に送信する",
      "action": "click",
      "target": "#reserve-form"
    },
    {
      "label": "確認ページに遷移していることを確認",
      "action": "assertURL",
      "target": "./confirm.html"
    },
    {
      "label": "確認ページでの宿泊日確認",
      "action": "assertVisible",
      "target": "text=宿泊日: 2023-09-15"
    },
    {
      "label": "確認ページでの宿泊数確認",
      "action": "assertVisible",
      "target": "text=宿泊数: 3泊"
    },
    {
      "label": "宿泊数に不正な文字を入力して送信する",
      "action": "fill",
      "target": "#term",
      "inputValue": "abc"
    },
    {
      "label": "エラーメッセージの表示確認",
      "action": "assertVisible",
      "target": ".invalid-feedback"
    },
    {
      "label": "禁則条件を確認する",
      "action": "fill",
      "target": "#date",
      "inputValue": "2024-10-15"
    },
    {
      "label": "有効な宿泊日を入力する",
      "action": "fill",
      "target": "#date",
      "inputValue": "2023-09-15"
    },
    {
      "label": "宿泊数を0泊に設定して送信する",
      "action": "fill",
      "target": "#term",
      "inputValue": "0"
    },
    {
      "label": "エラーメッセージの表示確認",
      "action": "assertVisible",
      "target": ".invalid-feedback"
    }
  ]
}