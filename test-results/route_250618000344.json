{
  "route_id": "test_reserve_001",
  "steps": [
    {
      "label": "予約ページを開く",
      "action": "load",
      "target": "https://hotel-example-site.takeyaqa.dev/ja/reserve.html?plan-id=0"
    },
    {
      "label": "宿泊予約ページが正常に表示されるか確認",
      "action": "assertVisible",
      "target": "h2:has-text('宿泊予約')"
    },
    {
      "label": "宿泊日入力欄が表示されるか確認",
      "action": "assertVisible",
      "target": "#date"
    },
    {
      "label": "宿泊数入力欄が表示されるか確認",
      "action": "assertVisible",
      "target": "#term"
    },
    {
      "label": "宿泊日入力して次へ進む",
      "action": "fill",
      "target": "#date",
      "value": "2023-11-01"
    },
    {
      "label": "宿泊数入力して次へ進む",
      "action": "fill",
      "target": "#term",
      "value": "2"
    },
    {
      "label": "予約ボタンを押下",
      "action": "click",
      "target": "button[type='submit']"
    },
    {
      "label": "確認画面が表示されるか確認",
      "action": "assertVisible",
      "target": "text=予約内容確認"
    },
    {
      "label": "宿泊日エラー（空白状態での実行）をチェック",
      "action": "fill",
      "target": "#date",
      "value": ""
    },
    {
      "label": "エラーメッセージが表示されるか確認",
      "action": "assertVisible",
      "target": ".invalid-feedback"
    },
    {
      "label": "無効な宿泊数入力をチェック",
      "action": "fill",
      "target": "#term",
      "value": "-1"
    },
    {
      "label": "無効な宿泊数エラーメッセージ確認",
      "action": "assertVisible",
      "target": ".invalid-feedback"
    },
    {
      "label": "宿泊日として3ヶ月以上未来の日付を入力",
      "action": "fill",
      "target": "#date",
      "value": "2024-02-01"
    },
    {
      "label": "宿泊数として無効な文字を入力",
      "action": "fill",
      "target": "#term",
      "value": "abc"
    },
    {
      "label": "もう一度エラーを確認",
      "action": "assertVisible",
      "target": ".invalid-feedback"
    },
    {
      "label": "条件を満たす宿泊日と数を入力",
      "action": "fill",
      "target": "#date",
      "value": "2023-11-15"
    },
    {
      "label": "宿泊数を2泊に設定",
      "action": "fill",
      "target": "#term",
      "value": "2"
    },
    {
      "label": "正しい情報で次に進む",
      "action": "click",
      "target": "button[type='submit']"
    },
    {
      "label": "キャンセルボタンを押す",
      "action": "click",
      "target": "button[type='button']"
    },
    {
      "label": "キャンセル後の状態確認",
      "action": "assertVisible",
      "target": "h2:has-text('宿泊予約')"
    }
  ]
}